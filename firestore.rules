rules_version = '2';
   service cloud.firestore {
     match /databases/{database}/documents {
       // Function to check if user is the specific admin
       function isSpecificAdmin() {
         return request.auth != null && 
                (request.auth.token.email == 'robinet.Alexandre@gmail.com' ||
                 request.auth.uid == 'robinet-alexandre-admin');
       }
       
       // Users can only access their own data
       match /users/{userId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
         // Only allow the specific admin to read all user data
         allow read: if isSpecificAdmin();
       }
       
       match /userProgress/{userId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
         // Only allow the specific admin to read all progress data
         allow read: if isSpecificAdmin();
       }
       
       match /userSettings/{userId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
         // Only allow the specific admin to read all settings data
         allow read: if isSpecificAdmin();
       }
     }
   }